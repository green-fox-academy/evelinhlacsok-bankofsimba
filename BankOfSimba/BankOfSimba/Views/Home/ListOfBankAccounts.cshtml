@model List<BankOfSimba.Models.BankAccount>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
    <div>
        <table border="1" cellpadding="15" style="text-align:center">
            <tr style="font-weight: bold; background-color:silver">
                <td>Index</td>
                <td>Name</td>
                <td>Balance</td>
                <td>Animal Type</td>
                <td>King?</td>
				<td>Good?</td>
            </tr>
                 @{ 
                     foreach (var bankacc in Model)
                     {
                         <tr style= @((bankacc.IsKing) ? "background:gold" : string.Empty)>
                             <td>@(Model.IndexOf(bankacc)+1)</td>
                             <td>@bankacc.Name</td>
                             <td>@bankacc.Balance.ToString("n2") Zebra</td>
                             <td>@bankacc.AnimalType</td>
                             <td style="color:silver">@((bankacc.IsKing) ? "KING" : string.Empty)</td>
					         <td style="color:silver">@((bankacc.IsGood) ? "Good Guy" : "Bad Guy")</td>
                         </tr>
                     }
                 }   
        </table>
    </div>
</body>
</html>